import sys
import liblrt as lrt

def test1():
  print 'getLiveURLs():'  
  urls = lrt.getLiveURLs()  
  
  if not urls:
    print 'Failed!'
    
  for url in urls:
    print 'Name: ' + url['name']
    print 'Now Playing: ' + url['nowPlaying']
    print 'URL: ' + url['url']
    print 'Type: ' + url['contentType']
    print '-------'    
    

def test2():
  print "getVideoStreamURL()" 
  urls = lrt.getLiveURLs()  
  
  if not urls:
    print 'Failed!'
    
  for url in urls:
    u = lrt.getVideoStreamURL(url['url'])
    print "url: " + u['url']
    print "image: " + u['image']
    print '-------'   

